{% extends 'base.html.twig' %}

{% block title %}Hello ProfileBookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    img {
        width: 20rem;
        height: 20rem;
        object-fit: cover;
    }
    .flexer {
        display: flex;
        justify-content: space-between;
        gap: 5rem;
    }
    .flexer-img {
        width: 20rem;
    }
</style>

<div class="example-wrapper">
    <h1>{{ book.title }}</h1>

    <div class="flexer">
        <div class="flexer-img">
            <img src="/uploads/{{ book.imgurl }}" alt="{{ book.title }}">
        </div>
        <div class="text">
            <p>{{ book.title }}</p>
            <p>{{ book.description }}</p>
            <p>{{ book.author }}</p>
            <p>{{ book.price }} â‚¬</p>
        </div>
    </div>
</div>
{% endblock %}
